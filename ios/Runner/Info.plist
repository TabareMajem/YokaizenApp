<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Yokaizen Manga for Mental Care</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>Yokaizen Manga</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>1.0.2</string>
	<key>CFBundleSignature</key>
	<string>????</string>

	<!-- URL Schemes -->
	<key>CFBundleURLTypes</key>
	<array>
		<!-- LINE Login -->
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>line3rdp.2007003693</string>
			</array>
		</dict>

		<!-- Google Sign-In -->
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>com.googleusercontent.apps.543257928924-arjavjrr75g92c97sko40a8ce7ohv8a0</string>
			</array>
		</dict>

		<!-- App custom scheme -->
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>com.yokaiquizzen.yokaiquizApp</string>
			</array>
		</dict>
	</array>

	<key>CFBundleVersion</key>
	<string>2</string>

	<!-- Encryption -->
	<key>ITSAppUsesNonExemptEncryption</key>
	<false/>

	<!-- LINE Queries -->
	<key>LSApplicationQueriesSchemes</key>
	<array>
		<string>lineauth</string>
		<string>lineauth2</string>
	</array>

	<key>LSRequiresIPhoneOS</key>
	<true/>

	<!-- Network Security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<true/>
	</dict>

	<!-- Permissions -->
	<key>NSAppleMusicUsageDescription</key>
	<string>YokaiZen needs access to play sounds for notifications.</string>
	<key>NSCameraUsageDescription</key>
	<string>YokaiZen needs camera access to scan QR codes.</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>YokaiZen needs microphone access for voice features.</string>
	<key>NSPhotoLibraryUsageDescription</key>
	<string>YokaiZen needs photo library access to upload profile pictures.</string>
	<key>NSUserTrackingUsageDescription</key>
	<string>This allows us to provide personalized mental fitness recommendations based on your activity.</string>
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>We need Bluetooth access to connect to your smart ring.</string>
	<key>NSBluetoothPeripheralUsageDescription</key>
	<string>We need Bluetooth access to connect to your smart ring.</string>
	<key>NSLocalNetworkUsageDescription</key>
	<string>This app requires local network access for debugging and device communication.</string>

	<!-- Bonjour (Dart Debugging) -->
	<key>NSBonjourServices</key>
	<array>
		<string>_dartobservatory._tcp</string>
	</array>

	<!-- UI Config -->
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<!-- Apple Sign In -->
	<key>com.apple.developer.applesignin</key>
	<array>
		<string>Default</string>
	</array>
	
	<!-- Associated Domains for Apple Sign In (if needed) -->
	<key>com.apple.developer.associated-domains</key>
	<array>
		<string>applinks:yokaizen.com</string>
	</array>

	<!-- Background Modes -->
	<key>UIBackgroundModes</key>
	<array>
		<string>fetch</string>
		<string>remote-notification</string>
		<string>bluetooth-central</string>
	</array>
